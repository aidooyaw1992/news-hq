<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="12dp">

    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="#9EDCD6D7"
        app:layout_constraintTop_toTopOf="@id/list_item_title"
        app:layout_constraintStart_toStartOf="@id/list_item_title"
        app:layout_constraintBottom_toTopOf="@id/list_item_title"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/list_item_title"
        style="?android:textAppearanceListItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/roboto"
        android:paddingTop="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintEnd_toStartOf="@id/list_item_goto_article"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Apple Introduces The New Iphone" />

    <TextView
        android:id="@+id/list_item_author"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        style="?android:textAppearanceListItemSecondary"
        android:textColor="#959495"
        app:layout_constraintEnd_toStartOf="@+id/list_item_goto_article"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_item_title"
        tools:text="Chicago Tribune" />

    <ImageView
        android:id="@+id/list_item_goto_article"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_baseline_arrow"
        app:layout_constraintBottom_toBottomOf="@id/list_item_author"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/list_item_title" />







</androidx.constraintlayout.widget.ConstraintLayout>